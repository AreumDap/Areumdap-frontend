<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AreumDap" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/pink2</item>
        <item name="colorPrimaryVariant">@color/pink2</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue1</item>
        <item name="colorSecondaryVariant">@color/blue2</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:windowBackground">@color/background2</item>

        <item name="android:statusBarColor">@color/background2</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="android:fontFamily">@font/nanum_square_round</item>

    </style>

    <!-- 기본 온보딩 테마 (온보딩은 그대로 유지) -->
    <style name="Theme.Areumdap.Onboarding" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink1</item>
        <item name="colorPrimaryVariant">@color/pink2</item>
        <item name="colorSecondary">@color/pink1</item>
        <!-- 기타 온보딩 스타일 -->
    </style>

    <!-- 봄 테마 -->
    <style name="Theme.Areumdap.Spring" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink1</item>
        <item name="colorSecondary">@color/pink2</item>
        <item name="backgroundColor">@color/bg_pink</item>
    </style>

    <!-- 여름 테마 -->
    <style name="Theme.Areumdap.Summer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green1</item>
        <item name="colorSecondary">@color/green2</item>
        <item name="backgroundColor">@color/bg_green</item>
    </style>

    <!-- 가을 테마 -->
    <style name="Theme.Areumdap.Autumn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/yellow1</item>
        <item name="colorSecondary">@color/yellow2</item>
        <item name="backgroundColor">@color/bg_yellow</item>
    </style>

    <!-- 겨울 테마 -->
    <style name="Theme.Areumdap.Winter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue1</item>
        <item name="colorSecondary">@color/blue2</item>
        <item name="backgroundColor">@color/bg_blue</item>
    </style>

    <style name="TA_Header1">
        <item name="android:textSize">36sp</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TA_Subtitle1">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TA_Body1">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TA_Body2">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TA_Body2_bold">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TA_Body3">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TA_Caption1">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!-- 아카이브 페이지 -->
    <style name="archive_tv">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="item_date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="character_task">
