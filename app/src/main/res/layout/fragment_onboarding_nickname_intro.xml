<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:background="@color/background1">

    <TextView
        android:id="@+id/tv_nickname_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="서로를 알아가기 위해\n당신을 뭐라고 부르면 좋울까요?"
        style="@style/TA_Subtitle1"
        android:textColor="@color/black"

        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintBottom_toTopOf="@id/view_character"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_character"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="52dp"
        android:background="@color/gray1"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_question" />


</androidx.constraintlayout.widget.ConstraintLayout>