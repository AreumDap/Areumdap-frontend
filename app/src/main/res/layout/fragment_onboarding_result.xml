<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_result_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="앞선 당신의 이야기를 통해\n당신을 닮은 아름이가 태어났어요!"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_character"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="68dp"
        android:background="@color/gray_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_msg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="캐릭터 1단계"
        app:layout_constraintBottom_toBottomOf="@id/view_character"
        app:layout_constraintEnd_toEndOf="@id/view_character"
        app:layout_constraintStart_toStartOf="@id/view_character"
        app:layout_constraintTop_toTopOf="@id/view_character" />

</androidx.constraintlayout.widget.ConstraintLayout>