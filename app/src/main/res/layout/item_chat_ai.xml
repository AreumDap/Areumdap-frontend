<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/ai_profile_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ai_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/chat_tv"/>

        <TextView
            android:id="@+id/chat_tv"
            style="@style/TA_Body3"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:background="@drawable/bg_chat"
            android:maxWidth="300dp"
            android:paddingHorizontal="20.5dp"
            android:paddingVertical="12dp"
            android:text="안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕"
            app:layout_constraintStart_toEndOf="@id/ai_profile_iv"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
