<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp">

    <TextView
        android:id="@+id/tv_selected_season_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="봄과 가장 닮아 계시군요!"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_keyword_selection_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:text="봄의 어떤 부분과\n가장 닮았다고 생각하시나요?"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selected_season_result" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cg_keywords"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:chipSpacingHorizontal="10dp"
        app:chipSpacingVertical="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_keyword_selection_guide"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_keyword_1"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:gravity="center"
            android:text="키워드1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:chipBackgroundColor="@color/sub_pink"

            app:rippleColor="@android:color/transparent"
            app:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_keyword_2"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/sub_pink"
            android:checkable="true"
            android:gravity="center"
            android:text="키워드2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"

            app:chipBackgroundColor="@color/sub_pink"
            app:chipStrokeWidth="0dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_keyword_3"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:checkable="true"
            android:gravity="center"
            android:text="키워드3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"

            app:chipBackgroundColor="@color/white"
            app:chipStrokeColor="@color/line_color"
            app:chipStrokeWidth="2dp" />
    </com.google.android.material.chip.ChipGroup>

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="직접 작성하기"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.445"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cg_keywords" />


</androidx.constraintlayout.widget.ConstraintLayout>