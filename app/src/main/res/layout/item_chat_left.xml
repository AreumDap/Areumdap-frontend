<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/ai_profile_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/temp_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ai_chat_tv"/>

        <TextView
            android:id="@+id/ai_chat_tv"
            style="@style/TA_Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@drawable/bg_chat"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="안녕"
            app:layout_constraintStart_toEndOf="@id/ai_profile_iv"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>