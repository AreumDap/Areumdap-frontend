<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp"
    android:background="@color/background1">

    <TextView
        android:id="@+id/tv_nickname_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="뭐라고 불러드릴까요?"
        style="@style/TA_Subtitle1"
        android:textColor="@color/black"

        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintBottom_toTopOf="@id/tv_nickname_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nickname_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:gravity="center"
        android:text="닉네임은 설정에서 언제든지 수정 가능해요."
        android:textColor="@color/gray5"
        style="@style/TA_Body3"

        app:layout_constraintBottom_toTopOf="@id/et_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_question" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"

        android:background="@color/background1"
        android:hint="닉네임"
        android:gravity="center"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:textColor="@color/gray3"
        style="@style/TA_Body2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname_description" />

</androidx.constraintlayout.widget.ConstraintLayout>