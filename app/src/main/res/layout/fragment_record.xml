<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/record_layout_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
      android:paddingBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대화 기록"
            style="@style/TA_Body1"
            android:textColor="@color/black" />

        <!-- 왼쪽/오른쪽 밀어주는 스페이서 -->
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sort_card"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            app:cardCornerRadius="18dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/line_color"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최신순"
                    style="@style/TA_Body3"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:src="@drawable/ic_question_right"
                    android:rotation="90"
                     />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_card_rv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/record_layout_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_chat_record"


        />



</androidx.constraintlayout.widget.ConstraintLayout>
