<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/report_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/report_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_core_value_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="19.5dp"
                android:paddingTop="25dp"
                android:paddingBottom="40dp">

                <!-- 1) 메인 타이틀 -->
                <TextView
                    android:id="@+id/cor_value_title_tv"
                    style="@style/TA_Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="10dp"
                    android:text="나에게 가장 중요한 가치"
                    android:textColor="@color/black" />

                <!-- 2) 대화 요약 + 날짜 -->
                <LinearLayout
                    android:id="@+id/summary_title_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:paddingBottom="24dp">

                    <TextView
                        style="@style/TA_Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="13dp"
                        android:text="대화 요약" />

                    <TextView
                        android:id="@+id/sum_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025.10.06" />
                </LinearLayout>

                <!-- 3) 해시태그 -->
                <LinearLayout
                    android:id="@+id/hashtag_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="40dp">

                    <include layout="@layout/item_hashtag" />

                    <include layout="@layout/item_hashtag" />

                    <include layout="@layout/item_hashtag" />
                </LinearLayout>

                <!-- 4) 통계 카드 2개 + 1개 -->
                <LinearLayout
                    android:id="@+id/sum_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/cnt_message_layout"
                            android:layout_width="0dp"
                            android:layout_height="97dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_title_border_radius8"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/TA_Caption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:text="주고 받은 메시지"
                                android:textColor="@color/black" />

                            <TextView
                                style="@style/TA_Subtitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00개"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="1dp" />

                        <LinearLayout
                            android:id="@+id/time_chat_layout"
                            android:layout_width="0dp"
                            android:layout_height="97dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_title_border_radius8"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="16dp">

                            <TextView
                                style="@style/TA_Caption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:text="대화 시간"
                                android:textColor="@color/black" />

                            <TextView
                                style="@style/TA_Subtitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="00분"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reflection_depth_layout"
                        android:layout_width="match_parent"
                        android:layout_height="97dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_title_border_radius8"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingVertical="16dp">

                        <TextView
                            style="@style/TA_Caption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="성찰 깊이"
                            android:textColor="@color/black" />

                        <TextView
                            style="@style/TA_Subtitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="깊음"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

                <!-- 5) 코너 장식 + 요약 텍스트 박스 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp"
                        android:paddingStart="10dp"
                        android:src="@drawable/ic_coner_pink" />

                    <TextView
                        style="@style/TA_Body3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="6dp"
                        android:text="오늘은 이러이러한 대화를 나눴어요.
이러이러한 고민을 나눴고,
이러이러한 이야기를 이야기해줬어요.
대화 요약내용이 들어가요 대화 요약내용이 들어가요
대화 요약내용이 들어가요대화 요약내용이 들어가요
대화 요약내용이 들어가요" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingVertical="10dp"
                        android:paddingStart="10dp"
                        android:rotation="180"
                        android:src="@drawable/ic_coner_pink" />
                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="12dp" />

            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <LinearLayout
                android:id="@+id/mid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="19.5dp"
                android:paddingVertical="40dp">

                <TextView
                    style="@style/TA_Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대화를 통해 발견한 것"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/found_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="19.5dp"
                android:paddingVertical="40dp">

                <TextView
                    style="@style/TA_Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자기 성찰 과제"
                    android:textColor="@color/black"
                    android:layout_margin="20dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/report_task_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/background2"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="27dp"
                            android:paddingVertical="46dp">

                            <ImageView
                                android:id="@+id/rep_task_cat_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/ic_reflection" />

                            <TextView
                                style="@style/TA_Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:gravity="center"
                                android:text="오늘 하루\n나를 위한 시간 갖기"
                                android:textColor="@color/black" />

                            <TextView
                                style="@style/TA_Caption1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="아무 생각 없이 좋아하는 일을 하며 \n
나만의 시간을 가져보세요."
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </HorizontalScrollView>
            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
