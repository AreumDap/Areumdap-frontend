<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:src="@drawable/ic_launcher_foreground"
        android:id="@+id/character_iv"
        android:layout_width="211dp"
        android:layout_height="165dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/character_level_cl"
        android:layout_width="356dp"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character_iv"
        app:layout_constraintBottom_toTopOf="@id/character_task_ll"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_level_cl_bar">

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 성장까지"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="16dp"
            android:paddingTop="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingStart="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/character_level_tv"
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text=" / "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/character_final_level_tv"
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=" XP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/growth_progress_bar"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginHorizontal="16dp"
            android:max="100"
            android:background="@drawable/bg_level_pb"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/character_next_level_btn"
        android:layout_width="98dp"
        android:layout_height="28dp"
        android:text="다음 단계 확인 ->"
        android:textSize="9dp"
        app:layout_constraintEnd_toEndOf="@+id/character_level_cl"
        app:layout_constraintBottom_toTopOf="@id/character_level_cl"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_next_level_btn"/>


    <LinearLayout
        android:id="@+id/character_task_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/bg_character_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/character_level_cl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp">

            <TextView
                android:text="자기 성찰 과제"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:textSize="13dp"
                android:layout_marginTop="30dp"/>

            <Spinner
                android:id="@+id/task_filter_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:popupBackground="@drawable/bg_spinner_dropdown"
                android:background="@drawable/bg_item_character_task"
                android:layout_marginTop="30dp"
                android:spinnerMode="dropdown"/>

        </RelativeLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/character_vp"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>