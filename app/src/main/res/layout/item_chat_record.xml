<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/record_cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- 즐겨찾기(별) -->
        <ImageView
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 카테고리 영역 -->
        <LinearLayout
            android:id="@+id/rec_cat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite">

            <ImageView
                android:id="@+id/sum_cat_iv"
                android:layout_width="11dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_reflection"
                android:layout_marginEnd="9dp" />

            <TextView
                android:id="@+id/sum_cat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자기성찰"
                style="@style/TA_Body3"
                android:textColor="@color/reflection2" />
        </LinearLayout>

        <!-- 내용 영역 -->
        <LinearLayout
            android:id="@+id/rec_content_latyout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="27.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rec_cat_layout"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/rec_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나에게 가장 중요한 가치"
                style="@style/TA_Body2"
                android:textColor="@color/black"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/rec_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대화요약대화요약대화요약대화요약대화요약"
                style="@style/TA_Caption1"
                android:textColor="@color/gray3" />
        </LinearLayout>

        <!-- 날짜 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026.01.25"
            style="@style/TA_Caption1"
            android:textColor="@color/gray3"
            android:paddingEnd="17dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/rec_content_latyout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
