<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/weui_back_filled"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#EB7383"
            android:contentDescription="뒤로가기"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextPageTitle"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack" />

        <TextView
            style="@style/TextLabel"
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            style="@style/InputRounded"
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="이름"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/labelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            style="@style/TextLabel"
            android:id="@+id/labelBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            style="@style/InputRounded"
            android:id="@+id/etBirth"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:hint="생년월일"
            android:inputType="number"
            android:maxLength="8"
            app:layout_constraintTop_toBottomOf="@id/labelBirth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            style="@style/TextLabel"
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etBirth"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            style="@style/InputRounded"
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/labelEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnEmailCheck" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/BtnGraySmall"
            android:id="@+id/btnEmailCheck"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="인증요청"
            app:layout_constraintTop_toTopOf="@id/etEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/etEmail"/>

        <TextView
            style="@style/TextError"
            android:id="@+id/tvEmailMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            style="@style/TextLabel"
            android:id="@+id/labelAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호 확인"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailMessage"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            style="@style/InputRounded"
            android:id="@+id/etAuthCode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:hint="인증번호"
            android:inputType="number"
            android:maxLength="6"
            app:layout_constraintTop_toBottomOf="@id/labelAuth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnAuthConfirm" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/BtnGraySmall"
            android:id="@+id/btnAuthConfirm"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:text="확인"
            app:layout_constraintTop_toTopOf="@id/etAuthCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/etAuthCode"/>

        <TextView
            style="@style/TextError"
            android:id="@+id/tvAuthMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/etAuthCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            style="@style/TextLabel"
            android:id="@+id/labelPw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvAuthMessage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPwHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="비밀번호는 8자 이상, 영문과 숫자, 특수문자를 포함해야 합니다."
            android:textSize="11sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/labelPw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/layoutPw"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPwHint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                style="@style/InputRounded"
                android:id="@+id/etPw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="비밀번호"
                android:paddingEnd="48dp"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/btnPwToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="비밀번호 보기"
                app:tint="#888888" />

        </FrameLayout>

        <TextView
            style="@style/TextError"
            android:id="@+id/tvPwMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/layoutPw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <FrameLayout
            android:id="@+id/layoutPwConfirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPwMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                style="@style/InputRounded"
                android:id="@+id/etPwConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="비밀번호 확인"
                android:paddingEnd="48dp"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/btnPwConfirmToggle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_visibility_off"
                android:contentDescription="비밀번호 확인 보기"
                app:tint="#888888" />

        </FrameLayout>

        <TextView
            style="@style/TextError"
            android:id="@+id/tvPwConfirmMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/layoutPwConfirm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/BtnPinkMain"
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="회원가입"
            android:enabled="false"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@id/tvPwConfirmMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>